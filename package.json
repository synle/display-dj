{
  "name": "display-dj",
  "version": "1.0.0",
  "description": "A windows application that allows quick toggle of dark mode and manage display brightness quickly",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "fix-import": "npx import-fixer --groupImport --aggressive",
    "preformat": "npm run fix-import",
    "format": "npx prettier --config ./.prettierrc --write **/*.{ts,tsx,js,jsx,scss,yml,html,json,md}",
    "start": "npm run build && electron ./dist/main.js"
  },
  "repository": "https://github.com/synle/display-dj",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "Sy Le",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "concurrently": "^7.0.0",
    "electron": "^17.1.2",
    "eslint": "^7.32.0",
    "typescript": "^4.5.5",
    "react-router-dom": "^6.2.2"
  },
  "dependencies": {
    "@types/react": "^17.0.39",
    "@hensm/ddcci": "^0.1.0"
  }
}
