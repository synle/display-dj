{
  "name": "display-dj",
  "version": "1.0.0",
  "description": "A windows application that allows quick toggle of dark mode and manages display brightness of individual display quickly",
  "scripts": {
    "build-electron": "webpack --config webpack-electron.js",
    "build-ui": "webpack --config webpack-ui.js",
    "build": "npm run build-ui && npm run build-electron",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "fix-import": "npx import-fixer --groupImport --aggressive",
    "preformat": "npm run fix-import",
    "format": "npx prettier --config ./.prettierrc --write **/*.{ts,tsx,js,jsx,scss,yml,html,json,md}",
    "start": "npm run build",
    "poststart": "electron ./dist/main.js"
  },
  "repository": "https://github.com/synle/display-dj",
  "keywords": [
    "display",
    "brightness",
    "darkmode",
    "windows",
    "electron",
    "javascript"
  ],
  "author": "Sy Le",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "babel-loader": "^8.2.3",
    "concurrently": "^7.0.0",
    "electron": "^17.1.2",
    "eslint": "^7.32.0",
    "react-router-dom": "^6.2.2",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@hensm/ddcci": "^0.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.34.16"
  }
}
