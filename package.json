{
  "name": "display-dj",
  "version": "1.0.0",
  "description": "A windows application that allows quick toggle of dark mode and manages display brightness of individual display quickly",
  "scripts": {
    "build-electron": "webpack --config webpack-electron.js",
    "build-ui": "webpack --config webpack-ui.js",
    "build": "concurrently \"npm run build-ui\" \"npm run build-electron\"",
    "dev-ui": "webpack --watch --config webpack-ui.js",
    "dev": "concurrently \"npm run dev-ui\"",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "fix-import": "npx import-fixer --groupImport --aggressive",
    "preformat": "npm run fix-import",
    "format": "npx prettier --config ./.prettierrc --write **/*.{ts,tsx,js,jsx,scss,yml,html,json,md}",
    "test-ci": "",
    "dist": "npx electron-packager \"./\" --platform=win32 --out=\"dist\"",
    "start": "npm run build",
    "poststart": "electron ./build/main.js"
  },
  "repository": "https://github.com/synle/display-dj",
  "keywords": [
    "display",
    "brightness",
    "darkmode",
    "windows",
    "electron",
    "javascript"
  ],
  "author": {
    "name": "Sy Le",
    "email": "le.nguyen.sy@gmail.com"
  },
  "license": "MIT",
  "main": "build/main.js",
  "build": {
    "appId": "io.synle.github.display-dj",
    "win": {
      "icon": "build/logo512.png"
    }
  },
  "dependencies": {
    "@hensm/ddcci": "^0.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.34.16",
    "react-router-dom": "^6.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-react-jsx": "^7.17.3",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "babel-loader": "^8.2.3",
    "concurrently": "^7.0.0",
    "css-loader": "^6.7.1",
    "electron": "^17.1.2",
    "electron-packager": "^15.4.0",
    "eslint": "^7.32.0",
    "prettier": "^2.6.0",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  }
}
