{
  "name": "display-dj",
  "version": "1.0.0",
  "description": "A windows application that allows quick toggle of dark mode and manages display brightness of individual display quickly",
  "scripts": {
    "clean": "rimraf build dist",
    "prebuild": "npm run clean",
    "build-electron": "webpack --config webpack-electron.js",
    "build-ui": "webpack --config webpack-ui.js",
    "build": "concurrently \"npm run build-ui\" \"npm run build-electron\"",
    "postbuild": "cpx \"src/assets/**/*\" ./build",
    "dev-ui": "webpack --watch --config webpack-ui.js",
    "dev": "concurrently \"npm run dev-ui\"",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "fix-import": "npx import-fixer --groupImport --aggressive",
    "preformat": "npm run fix-import",
    "format": "npx prettier --config ./.prettierrc --write **/*.{ts,tsx,js,jsx,scss,yml,html,json,md} && npx prettier --config ./.prettierrc --parser html --write **/*.svg",
    "test-ci": "",
    "prestart": "npm run build",
    "start": "concurrently \"cross-env APPLICATION_MODE='dev' electron ./build/main.js\" \"npm run dev\"",
    "predist": "cross-env APPLICATION_MODE='production' npx electron-packager \"./\" --platform=win32 --out=\"dist\" --override",
    "dist": "node dist.js"
  },
  "repository": "https://github.com/synle/display-dj",
  "keywords": [
    "display",
    "brightness",
    "darkmode",
    "windows",
    "electron",
    "javascript"
  ],
  "author": {
    "name": "Sy Le",
    "email": "le.nguyen.sy@gmail.com"
  },
  "license": "MIT",
  "main": "build/main.js",
  "dependencies": {
    "@hensm/ddcci": "^0.1.0",
    "auto-launch": "^5.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.34.16",
    "react-router-dom": "^6.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-react-jsx": "^7.17.3",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@svgr/webpack": "^6.2.1",
    "archiver": "^5.3.0",
    "babel-loader": "^8.2.3",
    "concurrently": "^7.0.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "^17.1.2",
    "electron-packager": "^15.4.0",
    "eslint": "^7.32.0",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "svg-url-loader": "^7.1.1",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  }
}
