{
  "name": "display-dj",
  "private": true,
  "version": "1.11.9",
  "description": "A cross platform desktop application that supports brightness adjustment for integrated laptop monitor as well as external monitors and dark mode toggle supporting Windows and MacOSX at the moment.",
  "scripts": {
    "clean-dist": "rimraf dist",
    "clean-build": "rimraf build",
    "clean": "npm run clean-dist && npm run clean-build",
    "prebuild": "npm run clean && node prebuild.js",
    "build-electron": "webpack --config webpack-electron.js",
    "build-ui": "webpack --config webpack-ui.js",
    "build": "concurrently \"npm run build-ui\" \"npm run build-electron\"",
    "build-dev": "cross-env APP_MODE='dev' npm run build",
    "build-prod": "cross-env APP_MODE='production' npm run build",
    "postbuild": "cpx \"src/assets/**/*\" ./build",
    "dev-ui": "webpack --watch --config webpack-ui.js",
    "dev": "concurrently \"npm run dev-ui\"",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "fix-import": "npx import-fixer --groupImport --aggressive --transformRelativeImport --importQuote=single",
    "preformat": "npm run fix-import",
    "format": "concurrently \"npm run format-js\" \"npm run format-html\"",
    "format-js": "npx prettier --config ./.prettierrc --no-error-on-unmatched-pattern --write src/**/**/**/**/**/*.{ts,tsx,js,jsx,scss,yml,html,json,md} **/*.{ts,tsx,js,jsx,scss,yml,html,json,md}",
    "format-html": "npx prettier --config ./.prettierrc --parser html --no-error-on-unmatched-pattern --write **/**/**/**/**/*.svg",
    "test-ci": "cross-env CI=true npm test",
    "test": "jest src",
    "prestart": "npm run build-dev",
    "start": "cross-env APP_MODE='dev' concurrently \"electron ./build/main.js\" \"npm run dev\"",
    "dist": "node dist.js",
    "predist-win32": " npx electron-packager \"./\" --overwrite --asar --prune=true --out=\"dist\" --icon=./src/assets/icon.png --platform=win32",
    "dist-win32": "npm run dist",
    "predist-darwin": "npx electron-packager \"./\" --overwrite --asar --prune=true --out=\"dist\" --icon=./src/assets/icon.icns --platform=darwin",
    "dist-darwin": "npm run dist",
    "postdist-darwin": "mv display-dj.dmg dist/display-dj-darwin.dmg"
  },
  "repository": "https://github.com/synle/display-dj",
  "keywords": [
    "display",
    "brightness",
    "darkmode",
    "windows",
    "electron",
    "javascript"
  ],
  "author": {
    "name": "Sy Le",
    "email": "le.nguyen.sy@gmail.com"
  },
  "license": "MIT",
  "main": "build/main.js",
  "optionalDependencies": {
    "@hensm/ddcci": "^0.1.0",
    "dark-mode": "^4.0.0",
    "electron-installer-dmg": "^4.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-winstaller": "^5.0.0",
    "loudness": "^0.4.1"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.10.0",
    "@mui/icons-material": "^5.8.2",
    "@mui/material": "^5.8.2",
    "auto-launch": "^5.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.39.1",
    "react-router-dom": "^6.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@svgr/webpack": "^6.2.1",
    "@types/jest": "^27.4.1",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "archiver": "^5.3.1",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.2.1",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "^19.0.2",
    "electron-packager": "^15.5.1",
    "eslint": "^8.16.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "sass": "^1.52.1",
    "sass-loader": "^13.0.0",
    "style-loader": "^3.3.1",
    "svg-url-loader": "^7.1.1",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.2",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  }
}
